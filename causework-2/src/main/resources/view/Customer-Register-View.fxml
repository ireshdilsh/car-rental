   <children>
      <Pane layoutX="34.0" layoutY="21.0" prefHeight="66.0" prefWidth="523.0" style="-fx-background-color: #1a3399; -fx-background-radius: 10px; -fx-border-radius: 10px;">
         <children>
            <Label layoutX="198.0" text="Register" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="38.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <JFXTextField fx:id="idText" labelFloat="true" layoutX="47.0" layoutY="117.0" prefHeight="36.0" prefWidth="132.0" promptText="Enter CustomerID" unFocusColor="BLACK" />
