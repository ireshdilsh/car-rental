            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
      <JFXButton layoutX="281.0" layoutY="496.0" onAction="#deleteCustomer" style="-fx-border-style: solid;" text="Delete  Customer">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
      <JFXButton layoutX="440.0" layoutY="496.0" onAction="#showCustomers" style="-fx-border-style: solid;" text="Show Customers">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
   </children>
